ARCHIVE="/tmp/$1.tar.gz"
cd ~/os-pi
git status
FILES=`git status | grep -P "^\t" | sed -e 's/^[ \t]\+изменено:[ \t]\+\(.*\)/\1/g'`
echo "Архивация файлов:"
echo "------------------------"
echo "$FILES"
echo "$2 $3 $4"
echo "------------------------"
echo "в архив $ARCHIVE"
tar czf $ARCHIVE $FILES $2 $3 $4
